@page
@model myWebAppTest1.Pages.Products.IndexModel
@{
}
<div class="container">
  <div class="row row-cols-2">
    <div class="col">
    <h1>My Product List</h1>
    <div class="table-responsive">
      <table class="table" id="myTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>PRICE</th>
                <th>BRAND</th>
                <th>DATE</th>
                <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.productInfo) 
            {
            <tr>
                    <td>@items.productId</td>
                    <td>@items.productName</td>
                    <td>@items.productPrice</td>
                    <td>@items.brandName</td>
                    <td>@items.dateCreated</td>
                    <td>
                        <a href="/Products/Edit/?productId=@items.productId" class="btn btn-primary btn-sm">EDIT</a>
                        <a href="/Products/Delete/?productId=@items.productId" class="btn btn-danger btn-sm">DELETE</a>
                    </td>
            </tr>
            }
        </tbody>
    </table>
   </div>
   </div>
   <div class="col">
       <h1>Insert Product</h1>
       <form method="POST">
           <label class="form-label">Product Name</label>
           <input type="text" name="productName" value="@Model.insertProduct.productName" class="form-control" />
           <label class="form-label">Product Price</label>
           <input type="number" name="productPrice" value="@Model.insertProduct.productPrice" class="form-control" />
           <label class="form-label">Product Brand</label>
           <select name="productBrand" class="form-control">
                    <option value="1">Brand 1</option>
                    <option value="2">Brand 2</option>
                    <option value="3">Brand 3</option>
                    <option value="4">Brand 4</option>
                    <option value="5">Brand 5</option>
           </select>
           <hr />
           <button class="btn btn-primary" style="width:100%;">Insert Product</button>
       </form>
   </div>
  </div>
</div>