@page
@model myWebAppTest1.Pages.Products.EditModel
@{
}
<h1>PRODUCT EDIT</h1>
<form method="POST">
    <label for="productName" class="form-label">Product Name</label>
    <input type="text" name="productName" value="@Model.infoProduct.productName" id="productName" class="form-control" />
    <label for="productPrice" class="form-label">Product Price</label>
    <input type="text" name="productPrice" value="@Model.infoProduct.productPrice" id="productPrice" class="form-control" />
    <label for="productBrand" class="form-label">Product Brand</label>
    <select class="form-control" id="productBrand" name="productBrand">
        <option>Brand @Model.infoProduct.productBrand (CURRENT)</option>
        <option value="1">Brand 1</option>
        <option value="2">Brand 2</option>
        <option value="3">Brand 3</option>
        <option value="4">Brand 4</option>
        <option value="5">Brand 5</option>
    </select>
    <hr />
    <button class="btn btn-primary" style="width:100%;">Update</button>
</form>